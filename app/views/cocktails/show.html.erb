<span data-toggle="tooltip" data-placement="left" title="Back">
  <%= link_to cocktails_path, class: "btn btn-outline-light btn-back m-1" do %>
    <div class="d-flex justify-content-center">
      <i class="fas fa-arrow-circle-left"></i>
    </div>
  <% end %>
</span>

<h1 class="text-center m-3"><%= @cocktail.name %></h1>

<div class="card-cocktail">

  <div class="card-cocktail-description">
    <div class="card-add-ingredient">
      <h3> <u> Ingredients </u> </h3>
      <span data-toggle="tooltip" data-placement="right" title="Add">
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </span>
    </div>
    <% @cocktail.doses.each do |dose| %>
      <ul>
        <li>
          <%= dose.ingredient.name %>
          :
          <%= dose.description %>
          <span data-toggle="tooltip" data-placement="top" title="Delete">
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete this ingredient?" } do %>
              <i class="fas fa-times icon-delete"></i>
            <% end %>
          </span>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <span data-toggle="tooltip" data-placement="top" title="Delete">
    <%= link_to cocktail_path(@cocktail), class: "btn btn-outline-light btn-cocktail mb-2", method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </span>
</div>
