<div class="container">
  <h1>List of cocktails</h1>
  <div>
    <%= link_to "Add a new cocktail", new_cocktail_path, type: "button", class: "btn btn-primary mt-2" %>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-md-4">
      <div class="card">

        <div class="card-title">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <p><%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: { confirm: "You sure?" } %> <i class='fas fa-trash'></i></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
